<?xml version='1.0'?>

<robot name="camera_test" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="robot_name" value="camera_test" />

    <!-- Import sensor plugin -->
    <gazebo>
        <plugin filename="ignition-gazebo-sensors-system"
            name="gz::sim::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>

    <!-- Make Base Link -->
    <link name="base_link">
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>

	<!-- Make stand link -->
    <link name="camera_stand">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.0416666666667" ixy="0.0" ixz="0.0" iyy="0.0416666666667" iyz="0.0" izz="0.0416666666667"/>
        </inertial>
        <visual name="camera_stand_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
            <material name="camera_stand">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_stand_joint" type="fixed">
        <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="camera_stand"/>
    </joint>

    <link name="camera">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="camera_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.094 0.0433 0.0433"/>
            </geometry>
            <material name="camera">
                <color rgba="0.05 0.05 0.05 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.094 0.0433 0.0433"/>
            </geometry>
        </collision>
    </link>

    <joint name="stand_camera_joint" type="fixed">
        <origin xyz="0.0 0.0 0.27165" rpy="0.0 0.0 -1.57079632679"/>
        <parent link="camera_stand"/>
        <child link="camera"/>
    </joint>

    <!-- Attach the sensor itself to the model -->
    <gazebo>
        <frame name="camera_frame" attached_to='camera'>
            <pose>0 0 0 0 0 1.57079632679</pose>
        </frame>
    </gazebo>

    <gazebo reference="camera">
        <sensor name="camera" type="camera">
            <camera>
              <horizontal_fov>1.047</horizontal_fov>
              <image>
                <width>320</width>
                <height>240</height>
              </image>
              <clip>
                <near>0.1</near>
                <far>100</far>
              </clip>
            </camera>
            <always_on>1</always_on>
            <update_rate>30</update_rate>
            <visualize>true</visualize>
            <topic>camera</topic>
            <pose relative_to='camera_frame'>0 0 0 0 0 0</pose>
            <enable_metrics>true</enable_metrics>
          </sensor>
    </gazebo>

</robot>
