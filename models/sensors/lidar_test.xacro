<?xml version='1.0'?>

<robot name="lidar_test" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="robot_name" value="lidar_test" />

    <!-- Import sensor plugin -->
    <gazebo>
        <plugin filename="ignition-gazebo-sensors-system"
            name="gz::sim::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>

    <!-- Make Base Link -->
    <link name="base_link">
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>

	<!-- Make stand link -->
    <link name="lidar_stand">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.57079632679 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.0416666666667" ixy="0.0" ixz="0.0" iyy="0.0416666666667" iyz="0.0" izz="0.0416666666667"/>
        </inertial>
        <visual name="lidar_stand_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
            <material name="lidar_stand">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <!-- Join the stand to the baselink -->
    <joint name="base_stand_joint" type="fixed">
        <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="lidar_stand"/>
    </joint>

    <!-- Make the lidar model -->
    <link name="lidar">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="lidar_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius=".0515" length="0.0717"/>
            </geometry>
            <material name="lidar">
                <color rgba="0.0 0.121568627451 0.294117647059 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
            </geometry>
        </collision>
    </link>

    <!-- Attach the lidar to the stand -->
    <joint name="stand_lidar_joint" type="fixed">
        <origin xyz="0.0 0.0 0.28585" rpy="0.0 0.0 0.0"/>
        <parent link="lidar_stand"/>
        <child link="lidar"/>
    </joint>

    <!-- Attach the sensor itself to the model -->
    <gazebo>
        <frame name="lidar_frame" attached_to='lidar'>
            <pose>0 0 0 0 0 0</pose>
        </frame>
    </gazebo>

    <gazebo reference="lidar">
        <sensor name="lidar" type='gpu_lidar'>
            <pose relative_to='lidar_frame'>0 0 0 0 0 0</pose>
            <topic>lidar</topic>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>640</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14159265359</min_angle>
                        <max_angle>3.14159265359</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>16</samples>
                        <resolution>1</resolution>
                        <min_angle>-0.349065850399</min_angle>
                        <max_angle>0.349065850399</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>0.08</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <alwaysOn>true</alwaysOn>
            <visualize>true</visualize>
            <enable_metrics>true</enable_metrics>
        </sensor>
    </gazebo>

</robot>
